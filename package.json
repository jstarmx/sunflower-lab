  "author": "James Starkie <jstar.mx@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint ./ --ext .js,.ts,.svelte"
  },
  "husky": {
    "hooks": {

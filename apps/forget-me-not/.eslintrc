{
  "extends": ["airbnb-base"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true,
    "serviceworker": true
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "no-restricted-globals": "off"
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3",
      "plugins": ["svelte3"],
      "rules": {
        "import/no-mutable-exports": "off"
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "plugins": ["import", "prettier"],
      "extends": ["prettier"],
      "rules": {
        "prettier/prettier": "error"
      }
    }
  ]
}
